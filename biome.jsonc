{
	"$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
	},
	"files": { "ignores": [".yarn/**"] },
	"formatter": { "useEditorconfig": true },
	"linter": {
		"rules": {
			"complexity": {
				"useLiteralKeys": "off", // conflicts with tsconfig noPropertyAccessFromIndexSignature: https://github.com/biomejs/biome/issues/463
			},
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": { "filenameCases": ["kebab-case"] },
				},
			},
		},
		"ignores": ["**/src/vscode-python-environments/*.ts"],
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
		},
	},
	"overrides": [
		{
			"include": [".vscode/*.json", "tsconfig.json", "**/*.jsonc"],
			"json": {
				"formatter": {
					"trailingCommas": "all",
				},
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true,
				},
			},
		},
	],
}
