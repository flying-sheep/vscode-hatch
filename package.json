{
	"name": "hatch",
	"displayName": "Hatch",
	"description": "Manage Hatch environments",
	"version": "0.0.1",
	"license": "GPL-3.0",
	"engines": {
		"vscode": "^1.99.0"
	},
	"categories": ["Other"],
	"publisher": "flying-sheep",
	"extensionDependencies": ["ms-python.vscode-python-envs"],
	"activationEvents": ["onLanguage:python"],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run sync && yarn run compile",
		"sync": "curl -o typings/vscode-python-environments/index.d.ts -L \"https://github.com/microsoft/vscode-python-environments/raw/refs/heads/main/src/api.ts\"",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src",
		"format": "biome format --write",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.99.0",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3"
	},
	"packageManager": "yarn@4.9.1"
}
